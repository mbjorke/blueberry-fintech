{
  "name": "@blueberry/design-system",
  "private": false,
  "version": "1.0.0",
  "description": "Blueberry Design System - Enterprise-grade UI components built on Radix UI primitives",
  "bin": {
    "blueberry-workflow": "./workflows/external-workflow-runner.js"
  },
  "main": "./dist/blueberry-design-system.umd.js",
  "module": "./dist/blueberry-design-system.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/blueberry-design-system.es.js",
      "require": "./dist/blueberry-design-system.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "workflows/external-workflow-runner.js"
  ],
  "keywords": [
    "blueberry",
    "design-system",
    "ui-components",
    "react",
    "typescript",
    "storybook",
    "radix-ui",
    "fintech"
  ],
  "author": "Blueberry",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish:design-system": "npm run build && npm publish",
    "workflow:design-review": "node ../../workflows/design-review/runner.js --package=@blueberry/design-system",
    "workflow:code-review": "node ../../workflows/code-review/runner.js --package=@blueberry/design-system",
    "workflow:security-review": "node ../../workflows/security-review/runner.js --package=@blueberry/design-system",
    "workflow:all": "npm run workflow:design-review && npm run workflow:code-review && npm run workflow:security-review",
    "workflow:external": "node ../../workflows/package-commands.js external"
  },
  "dependencies": {
