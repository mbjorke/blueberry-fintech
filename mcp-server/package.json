{
  "name": "@blueberry/design-system-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Blueberry Design System - Expert assistant for component usage, Tailwind tokens, and visual regression testing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blueberry-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "design-system",
    "tailwind",
    "visual-regression",
    "playwright",
    "component-analysis"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@playwright/test": "^1.54.2",
    "cheerio": "^1.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  }
}
